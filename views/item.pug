doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/output.css')
    link(rel='apple-touch-icon' sizes='180x180' href='/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.png')
    link(rel='manifest' href='/site.webmanifest')
  body
    header.fixed.w-screen
      .bg-black.mmd_bg-white.py-3.px-3.smd_px-24.mmd_border-b 
        a.text-white.font-lato.font-black.text-2xl.smd_text-xl(
          class="mmd_text-black mmd_text-3xl mmd_px-10 mmd_py-5"
          href="/"
        ) COOLWORTHS

    .w-screen.pt-20 
      a.text-sm.font-black.pl-2.slg_pl-10(
        href="/clothing/category/" + categoryId)  #{categoryName}
      .grid.grid-cols-1.slg_grid-cols-2.slg_px-10.slg_gap-10
        .w-full.mt-4
          .w-full.bg-slate-300.grid.place-items-center(
            class = "h-[90vh]"
          )
            p.text-white.font-black No image available
        
        .flex.flex-col.mt-4.px-4.slg_justify-self-end.slg_mr-14(
          class="slg_w-4/5"
        )
          p.font-black.text-xl.slg_text-4xl= title
          p.mt-1.text-xl.font-thin R #{price}.00
          p.font-black.text-sm.mt-4 Description
          p.font-black.text-sm.mt-3.text-slate-500 Items Available:
          p.text-sm.mt-1.text-slate-400= itemCount
          p.font-black.text-sm.mt-3.text-slate-500 Product code:
          p.text-sm.mt-1.text-slate-400= itemId
          .grid.grid-cols-1.mt-5 
            button.mb-3.text-white.font-black.bg-slate-700.py-4 Edit
            button.mb-10.text-white.font-black.bg-red-400.py-4 Delete